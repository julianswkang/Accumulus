{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es6",
      "dom"
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "./server"
  ],
  "exclude": [
    "node_modules",
    "./src/__tests__",
    "./dist"
  ]
}
